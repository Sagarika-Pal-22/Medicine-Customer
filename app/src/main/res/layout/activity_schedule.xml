<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutAnimation="@anim/layout_down_to_up"
    android:weightSum="1"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.ScheduleActivity">

    <TextView
        android:layout_width="match_parent"
        android:text="Choose your date:"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content"/>


    <CalendarView
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/calendar_view"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:text="Choose your time:"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_gravity="center"
        android:gravity="center|start"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Time"
        android:paddingStart="20dp"
        android:id="@+id/time"
        android:paddingEnd="20dp"
        android:background="@drawable/et_bg1"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

    <Button
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bt_bg2"
        android:id="@+id/next_bt"
        android:text="Next"
        android:textAllCaps="false"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/colorTextWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>