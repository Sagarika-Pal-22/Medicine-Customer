<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NothingFoundActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_sad_face"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Oops!"
        android:textColor="#333"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sorry, No MRC Expert is available right now at the moment, Kindly try after sometime Or Contact us at 9066990059/9066411444"
            android:textColor="#333"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!--Sorry no MRC Expert found near you. Please try again after sometime. Or contact us on 9066990059/9066411444"-->


        <Button
            android:layout_width="150dp"
            android:text="Home"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:background="@drawable/bt_bg2"
            android:layout_height="55dp"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>