<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.DrProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/colorPrimaryDark"
                android:layout_height="150dp"/>



            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="20dp"
                    android:layout_width="150dp"
                    android:layout_margin="10dp"
                    android:layout_height="150dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/dr_profile_image"
                        android:src="@drawable/def_dr"
                        android:layout_height="match_parent"/>


                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="20dp"
                    android:background="@drawable/round"
                    android:layout_gravity="bottom|end"
                    android:translationZ="3dp"
                    android:backgroundTint="#1eb821"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="20dp"/>

            </FrameLayout>

            <LinearLayout
                android:layout_marginTop="230dp"
                android:orientation="vertical"
                android:layout_marginBottom="60dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:text="Active Now"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:id="@+id/dr_name"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:text="Active Now"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/dr_type"
                    android:text="Physician"
                    android:layout_height="wrap_content"/>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:numStars="5"
                    android:rating="3"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:theme="@style/customRatingBar"
                    android:id="@+id/star_rating"
                    android:isIndicator="true"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:textSize="18sp"
                    android:textColor="#222"
                    android:layout_marginTop="5dp"
                    android:text="About Doctor"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical"
                    android:background="#F6F8F8"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="16sp"
                        android:id="@+id/about_us_tv"
                        android:layout_marginTop="5dp"
                        android:layout_margin="15dp"
                        android:text="In publishing and graphic design \nLorem ipsum is a placeholder text commonly \nLorem ipsum is a placeholder text commonly"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_coonnectBy"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:textSize="18sp"
                    android:textColor="#222"
                    android:layout_marginTop="15dp"
                    android:text="Connect by"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/voiceCallBt"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="30dp"
                        android:background="@drawable/ic_phone"
                        android:backgroundTint="@color/colorPrimaryDark" />

                    <ImageView
                        android:id="@+id/videoCallBt"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="30dp"
                        android:background="@drawable/ic_video_call"
                        android:backgroundTint="@color/colorPrimaryDark" />

                    <ImageView
                        android:id="@+id/chatBt"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="30dp"
                        android:background="@drawable/ic_chat_bubble_outline"
                        android:backgroundTint="@color/colorPrimaryDark" />

                </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </FrameLayout>

    </ScrollView>




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:onClick="next_bt"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimaryDark"
            android:layout_height="match_parent"/>


        <TextView
            android:layout_width="match_parent"
            android:text="Next"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_marginEnd="20dp"
            android:drawablePadding="10dp"
            android:drawableEnd="@drawable/ic_arrow_forward"
            android:layout_gravity="center"
            android:gravity="end"
            android:textSize="24sp"
            android:layout_height="wrap_content"/>

    </FrameLayout>

</FrameLayout>