<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="#DAF3FB"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="60dp"
                    android:layout_height="80dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/dr_image_iv"
                        android:background="#fff"
                        android:scaleType="fitXY"
                        android:padding="10dp"
                        android:src="@drawable/ic_logo"
                        android:layout_height="match_parent"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="16sp"
                        android:typeface="serif"
                        android:id="@+id/dr_name_tv"
                        android:textColor="@color/colorText"
                        android:text="Dr Jatin Batra"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/time_tv"
                        android:layout_marginTop="5dp"
                        android:typeface="serif"
                        android:textSize="12sp"
                        android:autoSizeTextType="uniform"
                        android:text="10 Sept, 2020 10:30 am"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/address_tv"
                        android:textSize="14sp"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="5dp"
                        android:drawableStart="@drawable/ic_my_location"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:text="JP Nagar"
                        android:typeface="serif"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="16sp"
                        android:typeface="serif"
                        android:visibility="gone"
                        android:id="@+id/dr_type_tv"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextAccent"
                        android:text="Dentist"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:id="@+id/status_tv"
                android:textStyle="bold"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="#CC3BCD0E"
                android:visibility="gone"
                android:typeface="serif"
                android:text="Completed"
                android:layout_height="wrap_content"/>


            <ImageView
                android:layout_width="match_parent"
                android:background="@drawable/my_doctors_bg"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_tryAgain"
                android:visibility="visible"
                android:textColor="@color/white"
                android:typeface="serif"
                android:textStyle="bold"
                android:padding="10dp"
                android:background="@drawable/bt_bg2"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:text="Try Again"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>